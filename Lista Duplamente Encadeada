#include <stdio.h>
#include <stdlib.h>
typedef struct dupla{
    int dado;
    struct dupla *elink, *dlink;
}no;
no *crialde(int n){
    no *ini = NULL, *p, *aux = NULL;
    int valor;
    
    for(int i=1; i <= n; i++){
        printf("\nDigite o valor %d da lista: ", i);
        scanf("%d", &valor);
        p= (no*) malloc(sizeof(no));
        p->dado = valor;
        p->elink = NULL;
        p->dlink = ini;
        
        if(ini != NULL){
            ini->elink = p;
        }else{
            aux=p;
        }
        ini=p;
    }
    return aux;
}
void escrevelista(no *p){
    while(p != NULL){
        printf("%d\t", p->dado);
        p=p->elink;
    }
}
int main(){
    no *primeira;
    int n;
    
    printf("criando uma lista encadeada");
    do{
        printf("\nEntre com o n√∫mero de nos: ");
        scanf("%d", &n);
    }while(n<0);
    
    primeira = crialde(n);
    
    if(primeira != NULL){
        printf("\nList criada: \n");
        escrevelista(primeira);
    }else{
        printf("\nLista vazia");
    }
    
    return 0;
}
